{
    "manifest_version": 2,
    "name": "User-Agent Switcher",
    "version": "1.0",
    "description": "Customize your user-agent or pick a random one to enhance privacy. Icon by Muhammad_Usman at Flaticon",
    "icons": {
        "48": "icons/border-48.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/border-48.png"
    },
    "web_accessible_resources": [
        "userAgents.js"
    ]
}
